
<p id="notice"><%= notice %></p>

<h1>Lista de categorias</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Desde</th>
      <th>Hasta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.start_dt %></td>
      <td><%= category.end_dt %></td>
      <td><%= link_to 'Ver', category , :class => "btn btn-info" %></td>
      <td><%= link_to 'Editar', edit_category_path(category) , :class => "btn btn-default" %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger" %></td>


    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nueva Categoria', new_category_path ,  :class => "btn btn-default" %>
