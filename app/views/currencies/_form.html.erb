<div class="row">
  <div class="col-md-2">
    <%= simple_form_for(@currency) do |f| %>
    <div class="form-group">
      <%= f.input :name %>
    </div>
    <div class="form-group">
      <%= f.input :description %> 
    </div>
    <div class="form-group">
      <%= f.input :abbreviation %>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
    <% end %>
  </div>
  <div class="col-md-2"></div>
  <div class="col-md-4"></div>
  <div class="col-md-4"></div>
</div>