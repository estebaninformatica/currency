
<p id="notice"><%= notice %></p>

<h1>Lista de categorias</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Desde</th>
      <th>A</th>
      <th>Categoria</th>
      <th>Fecha desde</th>
      <th>Fecha hasta</th>
      <th>Relacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @changes.each do |change| %>
    <tr>
      <td><%= change.type_change.currency_from.name %></td>
      <td><%= change.type_change.currency_to.name %></td>
      <td><%= change.type_change.category.name %></td>
      <td><%= change.start_dt %></td>
      <td><%= change.end_dt %></td>
      <td><%= change.amount %></td>
      <td><%= link_to 'Ver', change , :class => "btn btn-info" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>